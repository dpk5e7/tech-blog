<div class="col-11 p-2 my-2 mx-auto">
  <div class="card border-success">
    <div class="card-header bg-success text-white">
      <span class="articleHeader">
        {{article.title}}</span>
      <span class="articleMetadata">
        by
        {{article.user.name}}
        on
        {{format_datetime article.date_created}}</span>
    </div>
    <ul class="list-group list-group-flush">
      <li class="list-group-item">{{article.content}}</li>
    </ul>
    <div class="p-2">
      <div class="col-11 p-2 my-2 mx-auto">
        <div class="card border-success">
          <div class="card-header bg-success text-white">
            Comments:
          </div>
          <ul class="list-group list-group-flush">
            {{#each article.comments as |comment|}}
              <li class="list-group-item">{{comment.user.name}}
                on
                {{format_datetime comment.date_created}}
                <br />
                {{comment.content}}
              </li>
            {{/each}}
            {{#if logged_in}}
              <li class="list-group-item">
                <form id="createCommentForm">
                  <div class="p-2">
                    <div class="card border-success">
                      <div class="card-header bg-success text-white">
                        Create Comment
                      </div>
                      <div class="p-2">
                        <textarea
                          class="form-control"
                          id="txtContent"
                          rows="2"
                        ></textarea>
                      </div>
                      <div class="p-2 mx-auto">
                        <input
                          id="hdnArticleID"
                          type="hidden"
                          value="{{article.id}}"
                        />
                        <button
                          class="btn btn-success"
                          type="submit"
                        >Submit</button>
                      </div>
                    </div>
                  </div>
                </form>
                <script src="/js/createComment.js"></script>
              </li>
            {{/if}}
          </ul>
        </div>
      </div>
    </div>
  </div>
</div>