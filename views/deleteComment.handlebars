<form id="deleteCommentForm" class="col-11 p-2 my-2 mx-auto">
  <div class="card border-danger">
    <div class="card-header bg-danger text-white">
      Are you sure you want to delete this comment???
    </div>
    <ul class="list-group list-group-flush">
      <li class="list-group-item">ID:
        <label id="lblCommentID">{{comment.id}}</label></li>
      <li class="list-group-item">Date Created:
        {{format_datetime comment.date_created}}
      </li>
      <li class="list-group-item">Article:
        {{comment.article.title}}
        <input id="hdnArticleID" type="hidden" value="{{comment.article.id}}" />
      </li>
      <li class="list-group-item">Content:
        {{trim_string comment.content}}</li>
      <li class="list-group-item">Owner:
        {{comment.user.name}}</li>
    </ul>
    <div class="p-2 mx-auto">
      <button class="btn btn-danger" type="submit">Delete</button>
      <a
        href="/editArticle/{{comment.article.id}}"
        class="btn btn-secondary"
      >Cancel</a>
    </div>
  </div>
</form>

<script src="/js/deleteComment.js"></script>