<form id="deleteArticleForm" class="col-11 p-2 my-2 mx-auto">
  <div class="card border-danger">
    <div class="card-header bg-danger text-white">
      Are you sure you want to delete this article???
    </div>
    <ul class="list-group list-group-flush">
      <li class="list-group-item">ID:
        <label id="lblArticleID">{{article.id}}</label></li>
      <li class="list-group-item">Title: {{article.title}}</li>
      <li class="list-group-item">Date Created:
        {{format_date article.date_created}}
      </li>
      <li class="list-group-item">Content:
        {{trim_string article.content}}</li>
      <li class="list-group-item">Owner:
        {{article.user.name}}</li>
    </ul>
    <div class="p-2 mx-auto">
      <button class="btn btn-danger" type="submit">Delete</button>
      <a href="/dashboard" class="btn btn-secondary">Cancel</a>
    </div>
  </div>
</form>

<script src="/js/deleteArticle.js"></script>